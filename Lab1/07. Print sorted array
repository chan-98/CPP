#include <iostream>
#include <algorithm>
#include <string>
using namespace std;

// Sorting an array using default Sort function
// Make sure to type #include <algorithm> because sortArr() is a math function

int main()
{
    int arr[] = { 1, 5, 8, 9, 6, 7, 3, 4, 2, 0 };
    int len = sizeof(arr) / sizeof(arr[0]);
    cout << "The total size of the array is " << sizeof(arr) << endl;        
    cout << "The size of 1 element is " << sizeof(arr[1]) << endl;     
    cout << "Therefore the length of the array (no. of elements is " << len << endl;        
    // these 3 steps are not necessary. only to understand what this above statement has done
    // sizeof doesn't give length but gives the total size of all elements
    // then we divide it by size of 1 element (any one, maybe 0 or 1st index or anything) to get no. of elements
    
    sort(arr, arr + len);                        // THE SORTING STEP
    // learn how to find len using the prev statement - in case user input for arrays

    cout << "\nArray after sorting using sort function is : \n";
    for (int i = 0; i < len; ++i) {             // THE PRINTING STEP
        cout << arr[i] << " ";
    }
	   cout << endl;
    return 0;
}
