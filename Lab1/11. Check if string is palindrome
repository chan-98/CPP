#include <iostream>
#include <string>
// To reverse the string, use the built-in function: 
// str2 = string(str1.rbegin(), str1.rend());

using namespace std;
int main()
{
    string DNA;
    string revDNA;
    cout << "Enter your DNA sequence: ";
        getline(cin, DNA);
    cout << endl;

    revDNA = string(DNA.rbegin(), DNA.rend());
 
    // Check to see if it's a palindrome
    if (revDNA == DNA) {
        cout << "It's a palindrome!";
    }
    else {
        cout << "It's not a palindrome :(";
    }
  
    return 0;
}
