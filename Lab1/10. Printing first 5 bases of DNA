#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main()
{
    string DNA;
    int x, y;
    cout << "Enter the DNA sequence " << endl;
        getline(cin, DNA);
    cout << "Enter the index of the sequence you want to extract " << endl; 
        cin >> x;
    cout << "Enter how many bases you want " << endl;
        cin >> y;

    string subSeq = DNA.substr(x, y);
        cout << "The extracted sequence is " << subSeq << endl;
    
    return 0;
}
